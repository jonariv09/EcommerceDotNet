@model Producto


@* COL-PRODUCT *@
<div class="col-4 col-product my-3">
    @* CARD-PRODUCT *@
    <div class="card card-product">
        <span class="badge badge-sales" style="background: rgb(255, 62, 104);"> New </span>

        <img src="~/uploads/@Model.UniqueFileImage" height="150" class="card-img-top" alt="">
        <div class="card-body">
            <h6> @Model.Nombre </h6>
            <p class="card-text"> @Model.Descripcion </p>
            
            <div class="row m-0">
                <span class="badge badge-secondary"> $ @Model.Precio </span>
                <div class="ml-auto">
                    <a class="d-none" asp-controller="Productos" asp-action="Eliminar" asp-route-id="@Model.Id"> <span data-feather="trash-2"></span> </a>
                    <a href=""> <span data-feather="heart"> </span> </a>
                </div>
            </div>

        </div>
        <div class="bottom-card d-flex justify-content-end align-items-center">
            <a asp-controller="Productos" asp-action="Editar" asp-route-id="@Model.Id" class="btn-add-car d-flex justify-content-center align-items-center">            
                <span data-feather="plus"> </span>
            </a>

            <div class="container-share-networks">
                <p class="title-networks lead font-weight-bold text-uppercase m-0"> Share it! </p>
                <ul class="social-networks-list d-flex justify-content-center align-items-center m-0 p-0">
                    <li class="item-social-list m-2">
                        <a href="https://www.facebook.com">
                            <span data-feather="facebook"></span>
                        </a>
                    </li>
                    
                    <li class="item-social-list m-2">
                        <a href="https://www.instagram.com">
                            <span data-feather="instagram"></span>
                        </a>
                    </li>
                    <li class="item-social-list m-2">
                        <a href="https://www.twitter.com">
                            <span data-feather="twitter"></span>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    @* CARD-PRODUCT *@
</div>
@* COL-PRODUCT *@