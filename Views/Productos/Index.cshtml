@model List<Producto>

<div class="row p-4 mt-4">

    @for (int i = 0; i < Model.Count; i++)
    {
        @Html.DisplayFor(model => model[i]);
    }
    
</div>

@section rightPanel {
    <div class="row">
        <a role="button" asp-controller="Productos" asp-action="Agregar" class="ml-auto mr-5 btn btn-outline-primary">Nuevo producto</a>
    </div>
}